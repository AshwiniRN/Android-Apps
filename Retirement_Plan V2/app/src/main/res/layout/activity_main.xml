<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AED6F1"
    tools:context=".MainActivity">

    <!--TextView to display current principal-->
    <TextView
        android:id="@+id/labelCurrentPrincipal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:padding="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="#F5B7B1"
        android:text="Current Principal"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

    <!--EditText to input current principal-->
    <EditText
        android:id="@+id/inputCurrentPrincipal"
        android:layout_toRightOf="@id/labelCurrentPrincipal"
        android:layout_alignBottom="@id/labelCurrentPrincipal"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:gravity="center"
        android:background="#F9E79F"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

    <!--TextView to display Annual Addition-->
    <TextView
        android:id="@+id/labelAnnualAddition"
        android:layout_below="@id/labelCurrentPrincipal"
        android:layout_alignLeft="@id/labelCurrentPrincipal"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="#F5B7B1"
        android:text="Annual Addition"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

    <!--EditText to input Annual Addition-->
    <EditText
        android:id="@+id/inputAnnualAddition"
        android:layout_toRightOf="@id/labelAnnualAddition"
        android:layout_alignBottom="@id/labelAnnualAddition"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:gravity="center"
        android:background="#F9E79F"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

    <!--TextView to display Number of Years-->
    <TextView
        android:id="@+id/labelYears"
        android:layout_below="@id/labelAnnualAddition"
        android:layout_alignLeft="@id/labelAnnualAddition"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="#F5B7B1"
        android:text="Number of years"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

    <!--EditText to input Number of years-->
    <EditText
        android:id="@+id/inputYears"
        android:layout_toRightOf="@id/labelYears"
        android:layout_alignBottom="@id/labelYears"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:textSize="@dimen/textSize"
        android:gravity="center"
        android:background="#F9E79F"
        android:textColor="@color/textColor"
        />

    <!--TextView to display Rate of Return-->
    <TextView
        android:id="@+id/labelInvestment"
        android:layout_below="@id/labelYears"
        android:layout_alignLeft="@id/labelYears"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="#F5B7B1"
        android:text="Rate of return"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

    <!--EditText to input Rate of return-->
    <EditText
        android:id="@+id/inputInvestment"
        android:layout_toRightOf="@id/labelInvestment"
        android:layout_alignBottom="@id/labelInvestment"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:gravity="center"
        android:background="#F9E79F"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        />

    <!--Button to calculate final Amount which redirects to activity two screen-->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_below="@id/labelInvestment"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="@color/textColor"
        android:onClick="calculate"
        />

</RelativeLayout>