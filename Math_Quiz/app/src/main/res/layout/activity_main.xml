<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E79F"
    tools:context=".MainActivity">

<!--textview field for first value-->
    <TextView
        android:id="@+id/firstNum"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />


<!--textview field for operator value-->
    <TextView
        android:id="@+id/operator"
        android:layout_toRightOf="@id/firstNum"
        android:layout_alignBottom="@id/firstNum"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

<!--textview field for second value-->
    <TextView
        android:id="@+id/secondNum"
        android:layout_toRightOf="@+id/operator"
        android:layout_alignBottom="@+id/operator"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

<!--textview field for equal sign-->
    <TextView
        android:id="@+id/equal"
        android:layout_toRightOf="@+id/secondNum"
        android:layout_alignBottom="@+id/operator"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="="
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

<!-- edit text field to type in the answer -->
    <EditText
        android:id="@+id/answer"
        android:layout_toRightOf="@+id/equal"
        android:layout_alignBottom="@+id/equal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

<!--button to submit answer -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/firstNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:gravity="center"
        android:textSize="@dimen/textSize"
        />

<!--textview field saying if the answer is correct or incorrect-->
    <TextView
        android:id="@+id/result"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

<!--score counter-->
    <TextView
        android:id="@+id/score"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        />

<!-- next button-->
    <Button
        android:id="@+id/btnNext"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:gravity="center"
        android:textSize="@dimen/textSize"
        />

</RelativeLayout>
