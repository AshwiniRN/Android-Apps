<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7BDE2"
    tools:context=".SecondActivity">

    <!--TextView showing title mile to kilometer-->
    <TextView
        android:id="@+id/mileLabel"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text="Mile to Kilometer"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:layout_width="310dp"
        android:layout_height= "50dp"/>

    <!--EditText to input miles-->
    <EditText
        android:id="@+id/mile"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/mileLabel"
        android:layout_alignLeft="@+id/mileLabel"
        android:inputType="numberDecimal|numberSigned"
        android:gravity="center"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mileOutput"
        android:layout_toRightOf="@+id/mile"
        android:layout_alignBottom="@+id/mile"
        android:gravity="center"
        android:text=""
        android:layout_marginLeft="20dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <!--TextView showing title kilometer to mile-->
    <TextView
        android:id="@+id/kiloMeterLabel"
        android:layout_below="@+id/mile"
        android:layout_alignLeft="@+id/mileLabel"
        android:gravity="center"
        android:text="Kilometer to Mile"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        />

    <!--EditText to input kilometers-->
    <EditText
        android:id="@+id/kilometer"
        android:layout_below="@+id/kiloMeterLabel"
        android:layout_alignLeft="@+id/kiloMeterLabel"
        android:inputType="numberDecimal|numberSigned"
        android:gravity="center"
        android:text=""
        android:layout_marginTop="30dp"
        android:textColor="@color/textColor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        />

    <EditText
        android:id="@+id/kilometerOutput"
        android:layout_toRightOf="@+id/kilometer"
        android:layout_alignBottom="@+id/kilometer"
        android:inputType="numberDecimal|numberSigned"
        android:gravity="center"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_width="200dp"
        android:textColor="@color/textColor"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
         />

    <!--Back button ito go back to main screen -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@+id/kilometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="back"
        android:padding="10dp"
        android:text="Back"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize" />

</RelativeLayout>